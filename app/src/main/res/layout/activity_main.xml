    <com.sunzhibin.studyproject.widget.MLImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_margin="8dp"
        android:src="@mipmap/lz_bp_blue"
        android:visibility="gone"
        melove:radius="8dp"
        melove:shape_type="round" />

    <com.sunzhibin.studyproject.widget.AliPaySuccessView
        android:id="@+id/hookIcon"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <com.sunzhibin.studyproject.widget.RotateCircleView
        android:id="@+id/rotateCircleView"
        android:layout_width="300dp"
        android:layout_height="300dp" />
    <com.sunzhibin.studyproject.widget.RippleView
